.include beta.uasm
.include lab7macros.uasm
.include lab7checkoff.uasm


regs:   RESERVE(32)					

UI: 
        save_all_regs(regs)
        LD(xp,-4,r0)				| r0 this is illegal instruction
        extract_field(r0,31,26,r1)	
        CMPEQC(r1,16,r2)			
        BNE(r2,ldb)					
		CMPEQC(r1,17,r2)			
		BNE(r2,stb)					

        LD(r31,regs,r0)				
		LD(r31,regs+4,r1)			
        LD(r31,regs+8,r2)			
        BR(_IllegalInstruction)

ldb:
        extract_field(r0,20,16,r1)	
		MULC(r1,4,r1)
		ADDC(r1,regs,r1)
		LD(r1,0,r1)					
        extract_field(r0,15,0,r2)   
		SHLC(r2,16,r2)
		SRAC(r2,16,r2)				
		
		ADD(r1,r2,r3)				
		LD(r3,0,r4)					
		
		extract_field(r3,1,0,r5)	
		BEQ(r5,ldb_ea_0b00,r31)
		SUBC(r5,1,r5)
		BEQ(r5,ldb_ea_0b01,r31)
		SUBC(r5,1,r5)
		BEQ(r5,ldb_ea_0b10,r31)
		SUBC(r5,1,r5)
		BEQ(r5,ldb_ea_0b11,r31)
		
	ldb_ea_0b00:
		extract_field(r4,7,0,r8)	
		BR(ldb_rc_assign)
	ldb_ea_0b01:
		extract_field(r4,15,8,r8)	
		BR(ldb_rc_assign)
	ldb_ea_0b10:
		extract_field(r4,23,16,r8)	
		BR(ldb_rc_assign)
	ldb_ea_0b11:
		extract_field(r4,31,24,r8)	
		BR(ldb_rc_assign)
		
	ldb_rc_assign:
		extract_field(r0,25,21,r9)	
		MULC(r9,4,r9)
        ST(r8,regs,r9)				
		
		restore_all_regs(regs)
		JMP(xp)
        
		
stb:
        extract_field(r0,20,16,r1)	
		MULC(r1,4,r1)
		ADDC(r1,regs,r1)
		LD(r1,0,r1)					
        extract_field(r0,15,0,r2)   
		SHLC(r2,16,r2)
		SRAC(r2,16,r2)				
		
		ADD(r1,r2,r3)				
		LD(r3,0,r4)					
		
		extract_field(r4,7,0,r10)	
		extract_field(r4,15,8,r11)	
		extract_field(r4,23,16,r12)	
		extract_field(r4,31,24,r13)	
		
		extract_field(r0,25,21,r8)	
		MULC(r8,4,r8)
		ADDC(r8,regs,r8)
		LD(r8,0,r8)					
		SHLC(r8,24,r8)
		SHRC(r8,24,r8)					
		
		extract_field(r3,1,0,r5)		
		BEQ(r5,stb_ea_0b00,r31)
		SUBC(r5,1,r5)
		BEQ(r5,stb_ea_0b01,r31)
		SUBC(r5,1,r5)
		BEQ(r5,stb_ea_0b10,r31)
		SUBC(r5,1,r5)
		BEQ(r5,stb_ea_0b11,r31)
		
	stb_ea_0b00:
		MOVE(r8,r10)				
		BR(stb_memory_assign)
	stb_ea_0b01:
		MOVE(r8,r11)				
		BR(stb_memory_assign)
	stb_ea_0b10:
		MOVE(r8,r12)				
		BR(stb_memory_assign)
	stb_ea_0b11:
		MOVE(r8,r13)				
		BR(stb_memory_assign)
		
	stb_memory_assign:
		SHLC(r11,8,r11)
		SHLC(r12,16,r12)
		SHLC(r13,24,r13)			
		
		ADD(r10,r11,r11)
		ADD(r12,r13,r12)
		ADD(r11,r12,r12)			

		ST(r12,0,r3)				
		
        restore_all_regs(regs)
        JMP(xp)

IllegalInstruction:

        HALT()